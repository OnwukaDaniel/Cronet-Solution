<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product summary"
                android:textSize="17sp"
                android:ellipsize="end"
                android:padding="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/complete_image"
                    android:layout_width="150dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/upload_thumbnail"
                    android:scaleType="centerInside"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Product Name"
                        android:textSize="14sp"
                        android:paddingHorizontal="10dp"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/complete_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Product Name"
                        android:textSize="17sp"
                        android:ellipsize="end"
                        android:padding="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Product price"
                        android:textSize="14sp"
                        android:paddingHorizontal="10dp"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/complete_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:textSize="17sp"
                        android:ellipsize="end"
                        android:padding="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Product quantity"
                        android:textSize="14sp"
                        android:paddingHorizontal="10dp"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/complete_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quantity"
                        android:textSize="17sp"
                        android:ellipsize="end"
                        android:padding="10dp"/>

                    <TextView
                        android:id="@+id/complete_discount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:ellipsize="end"
                        android:padding="10dp"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product description"
                android:textSize="14sp"
                android:layout_marginTop="30dp"
                android:paddingHorizontal="15dp"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/complete_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:maxLines="1"
                android:textSize="17sp"
                android:ellipsize="end"
                android:padding="15dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginHorizontal="10dp"
                android:background="@color/teal_700"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/complete_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="@drawable/gray_ripple"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/complete_section_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:padding="15dp"
                    android:text="Section"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:src="@drawable/ic_dropdown"
                    android:paddingHorizontal="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginHorizontal="10dp"
                android:background="@color/teal_700"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save / Upload"
                android:textSize="17sp"
                android:ellipsize="end"
                android:paddingHorizontal="15dp"
                android:paddingVertical="25dp"/>

            <Button
                android:id="@+id/complete_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"/>

            <Button
                android:id="@+id/complete_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>